{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Spring Boot Backend - MyMensa2",
            "request": "launch",
            "cwd": "${workspaceFolder}\\MyMensa2\\backend",
            "mainClass": "com.mymensa2.backend.BackendApplication",
            "args": "",
            "envFile": "${workspaceFolder}\\MyMensa2\\backend\\.env"
        },
        {
            "type": "java",
            "name": "Spring Boot Backend - TravelReimburse",
            "request": "launch",
            "cwd": "${workspaceFolder}\\TravelReimburse\\backend",
            "mainClass": "com.travelreimburse.TravelReimburseApplication",
            "args": ""
        },
        {
            "type": "node",
            "request": "launch",
            "name": "React Frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["start"],
            "cwd": "${workspaceFolder}\\MyMensa2\\frontend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ],
    "compounds": [
        {
            "name": "Full Stack: Frontend + Backend (MyMensa2)",
            "configurations": [
                "Spring Boot Backend - MyMensa2",
                "React Frontend"
            ],
            "stopAll": true
        }
    ]
}

meta {
  name: Validate Order QR Code
  type: http
  seq: 5
}

post {
  url: http://localhost:8081/api/orders/validate
  body: json
  auth: none
}

body:json {
  {
    "qrCode": "ORDER-1"
  }
}

tests {
  test("Status should be 200", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Response should contain validation details", function() {
    expect(res.body).to.have.property('alreadyCollected');
    expect(res.body).to.have.property('collectedAt');
    expect(res.body).to.have.property('orderId');
    expect(res.body).to.have.property('meal');
  });
}

tests {
  test("Status is 200 OK", function() {
    expect(res.status).to.equal(200);
  });

  test("Response contains price breakdown", function() {
    expect(res.body).to.have.property("totalPrice");
    expect(res.body.totalPrice).to.be.a("number");
    expect(res.body.totalPrice).to.be.greaterThan(0);
  });
}

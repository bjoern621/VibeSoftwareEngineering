meta {
  name: 05 - Get Booking By ID
  type: http
  seq: 5
}

get {
  url: {{baseUrl}}/api/buchungen/1
  body: none
  auth: bearer
}

auth:bearer {
  token: {{authToken}}
}

script:pre-request {
  const axios = require('axios');
  const baseUrl = bru.getEnvVar("baseUrl");
  
  // Ensure user exists and get token
  try {
    await axios.post(`${baseUrl}/api/kunden/registrierung`, {
      email: "test.customer@example.com",
      password: "Test1234!",
      firstName: "Bruno",
      lastName: "Testuser",
      phoneNumber: "+49 30 12345678",
      street: "Teststra√üe 123",
      postalCode: "10115",
      city: "Berlin",
      driverLicenseNumber: "B1234567890"
    });
  } catch (e) {}
  
  try {
    const loginRes = await axios.post(`${baseUrl}/api/kunden/login`, {
      email: "test.customer@example.com",
      password: "Test1234!"
    });
    if (loginRes.data && loginRes.data.token) {
      bru.setEnvVar("authToken", loginRes.data.token);
    }
  } catch (e) {
    console.log("Login failed:", e.message);
  }
}

tests {
  test("Status is 200, 403 or 404", function() {
    expect([200, 403, 404]).to.include(res.status);
  });

  test("Response contains booking data if found and authorized", function() {
    if (res.status === 200) {
      expect(res.body).to.have.property("id");
      expect(res.body).to.have.property("status");
    }
  });
}

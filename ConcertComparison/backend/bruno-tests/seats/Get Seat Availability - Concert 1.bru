meta {
  name: Get Seat Availability - Concert 1
  type: http
  seq: 1
}

get {
  url: {{baseUrl}}/api/events/1/seats
  body: none
  auth: none
}

tests {
  test("Status code is 200", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Response has concertId as string", function() {
    expect(res.body.concertId).to.equal("1");
  });
  
  test("Response has seats array", function() {
    expect(res.body.seats).to.be.an('array');
  });
  
  test("Seats have row, number, price fields (if seats exist)", function() {
    if (res.body.seats && res.body.seats.length > 0) {
      const seat = res.body.seats[0];
      expect(seat).to.have.property('row');
      expect(seat).to.have.property('number');
      expect(seat).to.have.property('price');
    } else {
      // Skipped - no seats in database yet
    }
  });
  
  test("Response has categoryAvailability array", function() {
    expect(res.body.availabilityByCategory).to.be.an('array');
  });
  
  test("No negative values in category availability", function() {
    res.body.availabilityByCategory.forEach(cat => {
      expect(cat.available).to.be.at.least(0);
      expect(cat.held).to.be.at.least(0);
      expect(cat.sold).to.be.at.least(0);
    });
  });
}

tests {
  // HINWEIS: Dieser Endpoint ist noch nicht implementiert
  // Wenn er implementiert ist, diesen Test auf Status 409 ändern
  
  test("Status code is 409 or 404 (404 = not implemented yet)", function() {
    expect(res.status).to.be.oneOf([409, 404]);
  });
  
  // Tests für Status 409 - erst aktivieren wenn Endpoint implementiert ist
  test("Response has error code (only if 409)", function() {
    if (res.status === 409) {
      expect(res.body.code).to.be.a('string');
      expect(res.body.code).to.match(/SEAT_NOT_AVAILABLE|CONCURRENCY_CONFLICT/);
    }
  });
  
  test("Response has error message", function() {
    expect(res.body.message).to.be.a('string');
  });
}

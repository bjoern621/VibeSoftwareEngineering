meta {
  name: Get Order - Success
  type: http
  seq: 5
}

get {
  url: {{baseUrl}}/api/orders/1
  body: none
  auth: bearer
}

auth:bearer {
  token: {{authToken}}
}

tests {
  test("Status code is 200 or 404", function() {
    expect(res.status).to.be.oneOf([200, 404]);
  });
  
  test("Response has valid structure (only if 200)", function() {
    if (res.status === 200) {
      expect(res.body.orderId).to.be.a('string');
      expect(res.body.userId).to.be.a('string');
      expect(res.body.seatId).to.be.a('string');
      expect(res.body.totalPrice).to.be.a('number');
    }
  });
}
